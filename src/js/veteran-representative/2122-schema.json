{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Appointment of Veterans Service Organization As Claimant's Representative",
  "type": "object",
  "definitions": {
    "fullName": {
      "type": "object",
      "properties": {
        "first": {
          "type": "string"
        },
        "middle": {
          "type": "string"
        },
        "last": {
          "type": "string"
        },
        "suffix": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "veteranFullName": {
      "type": "string"
    },
    "veteranSSN": {
      "type": "string"
    },
    "vaFileNumber": {
      "type": "string"
    },
    "insuranceNumber": {
      "type": "string"
    },
    "claimantFullName": {
      "type": "string"
    },
    "claimantAddress": {
      "type": "string"
    },
    "claimantEmail": {
      "type": "string"
    },
    "claimantDaytimePhone": {
      "type": "string"
    },
    "claimantEveningPhone": {
      "type": "string"
    },
    "relationship": {
      "title": "Relationship to Veteran",
      "type": "string", "enum": ["Parent", "Spouse", "Child"]
    },
    "appointmentDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "organizationName": {
      "type": "string"
    },
    "organizationEmail": {
      "type": "string"
    },
    "organizationRepresentativeName": {
      "type": "string"
    },
    "organizationRepresentativeTitle": {
      "type": "string"
    },
    "authorization": {
      "type": "boolean"
    },
    "disclosureExceptionDrugAbuse": {
      "type": "boolean"
    },
    "disclosureExceptionAlcoholism": {
      "type": "boolean"
    },
    "disclosureExceptionHIV": {
      "type": "boolean"
    },
    "disclosureExceptionSickleCellAnemia": {
      "type": "boolean"
    },
    "authorizationToChangeClaimantAddress": {
      "type": "boolean"
    }
  }
}
